{
  "name": "@noderr/node-os",
  "version": "1.0.0",
  "description": "Noderr Node OS - Secure, autonomous node software for the Noderr Protocol",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "setup": "pnpm install && pnpm run build",
    "build": "pnpm -r --filter='./packages/**' build",
    "build:watch": "pnpm -r --filter='./packages/**' --parallel build:watch",
    "clean": "pnpm -r --filter='./packages/**' clean && rimraf node_modules",
    "lint": "eslint --ext .ts,.tsx packages",
    "lint:fix": "eslint --ext .ts,.tsx packages --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathPattern=\\.unit\\.test\\.ts$",
    "test:integration": "jest --testPathPattern=\\.integration\\.test\\.ts$",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "noderr",
    "node",
    "oracle",
    "defi"
  ],
  "author": "Noderr Protocol",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "@types/node-cache": "^4.2.5",
    "@types/ws": "^8.18.1",
    "node-cache": "^5.1.2",
    "ws": "^8.18.3"
  }
}
