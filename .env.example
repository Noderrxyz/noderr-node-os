# Noderr Node OS Environment Configuration
# Updated: 2025-12-01 with NFT Integration

# ============================================================================
# NFT Configuration (CRITICAL - Required for node authorization)
# ============================================================================
# Your wallet address that owns the Noderr Utility NFT
WALLET_ADDRESS=0xYOUR_WALLET_ADDRESS_HERE

# Your NFT Token ID (obtained after minting)
NFT_TOKEN_ID=YOUR_TOKEN_ID_HERE

# Blockchain RPC Configuration
ALCHEMY_API_KEY=your_alchemy_api_key_here
RPC_URL=https://base-sepolia.g.alchemy.com/v2/your_alchemy_api_key_here

# Contract Addresses (Base Sepolia Testnet)
UTILITY_NFT_ADDRESS=0xD67326eE24F3a5fcb8a12AaD294Dc610642F96cC
NODE_REGISTRY_ADDRESS=0x1F236Ea17338937f7f4005013E346F7cC216A16E
PUBLIC_NFT_MINTER_ADDRESS=0x910dCc22dB343CA38A186580318Ad642b521A0Fd

# NFT Verification Settings
NFT_VERIFICATION_ENABLED=true
NFT_VERIFICATION_INTERVAL=3600000  # 1 hour in milliseconds
NFT_VERIFICATION_RETRIES=3

# ============================================================================

# Database
POSTGRES_PASSWORD=change_this_in_production
DATABASE_URL=postgresql://noderr:${POSTGRES_PASSWORD}@postgres:5432/noderr

# Redis
REDIS_URL=redis://redis:6379

# ML Service
ML_SERVICE_HOST=ml-service
ML_SERVICE_PORT=50051

# Node Runtime
NODE_ENV=production
PORT=8080
LOG_LEVEL=info

# Security
JWT_SECRET=change_this_in_production
ENCRYPTION_KEY=change_this_in_production

# Network
NETWORK_ID=noderr-mainnet
P2P_PORT=50052

# Telemetry
TELEMETRY_ENABLED=true
METRICS_PORT=9090

# Feature Flags
ENABLE_ML=true
ENABLE_GOVERNANCE=true
ENABLE_AUTO_TRADING=false
