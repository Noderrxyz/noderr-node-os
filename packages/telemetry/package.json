{
  "name": "@noderr/telemetry",
  "version": "1.0.0",
  "description": "Unified telemetry system for Noderr Protocol - Metrics, monitoring, alerts, and dashboards",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rimraf dist coverage"
  },
  "keywords": [
    "telemetry",
    "monitoring",
    "metrics",
    "alerts",
    "dashboards",
    "observability",
    "trading"
  ],
  "author": "Noderr Protocol Team",
  "license": "MIT",
  "dependencies": {
    "@noderr/types": "workspace:*",
    "@noderr/utils": "workspace:*",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/exporter-prometheus": "^0.45.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.45.1",
    "@opentelemetry/instrumentation": "^0.45.1",
    "@opentelemetry/instrumentation-grpc": "^0.45.1",
    "@opentelemetry/instrumentation-http": "^0.45.1",
    "@opentelemetry/resources": "^1.19.0",
    "@opentelemetry/sdk-metrics": "^1.19.0",
    "@opentelemetry/sdk-node": "^0.45.1",
    "@opentelemetry/sdk-trace-base": "^1.19.0",
    "@opentelemetry/sdk-trace-node": "^1.19.0",
    "@opentelemetry/semantic-conventions": "^1.19.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "@slack/web-api": "^6.0.0",
    "hdr-histogram-js": "^3.0.0",
    "nodemailer": "^7.0.7",
    "prom-client": "^15.1.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "winston-loki": "^6.0.0",
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1"
