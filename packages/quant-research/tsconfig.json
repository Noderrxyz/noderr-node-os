{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [
      "node",
      "jest"
    ],
    "target": "es2018",
    "downlevelIteration": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    {
      "path": "../types"
    },
    {
      "path": "../utils"
    },
    {
      "path": "../market-intel"
    }
  ]
}
